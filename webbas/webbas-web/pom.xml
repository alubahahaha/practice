        <groupId>com.aspire.webbas</groupId>
        <artifactId>webbas</artifactId>
        <version>1.0</version>
    </parent>

    <artifactId>webbas-demo-web</artifactId>
    <packaging>war</packaging>
    <name>webbas-demo-web</name>


    <dependencies>
        <dependency>
            <groupId>com.aspire.webbas</groupId>
            <artifactId>webbas-portal-web</artifactId>
            <version>2.1</version>
            <scope>system</scope>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>com.aspire.webbas</groupId>
            <artifactId>webbas-portal-web</artifactId>
            <version>${webbas.version}</version>
            <classifier>classes</classifier>
            <scope>provided</scope>
        </dependency>

        <!-- wanglei 20151028 start-->
        <dependency>
            <groupId>com.aspire.webbas</groupId>
            <artifactId>webbas-components-core</artifactId>
            <scope>system</scope>
            <systemPath>${web.basedir}/lib/webbas-components-core-2.1.jar
            </systemPath>
            <version>2.1</version>
        </dependency>
        <dependency>
            <groupId>com.aspire.webbas</groupId>
            <artifactId>webbas-components-attachment</artifactId>
            <version>${webbas.version}</version>
        </dependency>
        <dependency>
            <groupId>com.aspire.webbas</groupId>
            <artifactId>webbas-components-codedict</artifactId>
            <version>${webbas.version}</version>
        </dependency>
        <dependency>
            <groupId>com.aspire.webbas</groupId>
            <artifactId>webbas-components-configuration</artifactId>
            <version>${webbas.version}</version>
        </dependency>
        <dependency>
            <groupId>com.aspire.webbas</groupId>
            <artifactId>webbas-portal-authapi</artifactId>
            <version>2.0-SNAPSHOT</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.aspire.webbas</groupId>
            <artifactId>webbas-portal-client</artifactId>
            <version>2.0-SNAPSHOT</version>
            <type>jar</type>
        </dependency>
    </dependencies>
    <!-- wanglei 20151028 end-->

    <build>
        <finalName>webbas-demo</finalName>
        <resources>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.1.1</version>
                <configuration>
                    <outputDirectory>${project.deploy.directory}</outputDirectory>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2.1</version>
                <executions>
                    <execution>
                        <id>confg-zip</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <skipAssembly>false</skipAssembly>
                            <outputDirectory>${project.deploy.directory}</outputDirectory>
                            <descriptor>src\main\assembly\config-zip.xml</descriptor>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.7</version>
                <executions>
                    <execution>
                        <phase>deploy</phase>
                        <goals>
                            <goal>deploy-file</goal>
                        </goals>
                        <configuration>
                            <packaging>war</packaging>
                            <generatePom>true</generatePom>
                            <url>http://10.1.5.176:8081/nexus/content/groups/public</url>
