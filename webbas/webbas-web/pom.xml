                            <file>${project.build.directory}/webbas-demo.war</file>
                        </configuration>
                    </execution>
                </executions>
            </plugin> -->
        </plugins>
    </build>
    <profiles>
        <!--js、css压缩-->
        <profile>
            <id>jscsscompress</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>net.alchim31.maven</groupId>
                        <artifactId>yuicompressor-maven-plugin</artifactId>
                        <version>1.3.0</version>
                        <executions>
                            <execution>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>compress</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <encoding>UTF-8</encoding>
                            <nosuffix>true</nosuffix>
                            <jswarn>true</jswarn>
                            <!-- 将已压缩，或可能压缩会出错的文件删除 -->
                            <excludes>
                                <exclude>**/*min.js</exclude>
                                <exclude>**/*min.css</exclude>
                                <exclude>**/assets/**</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-war-plugin</artifactId>
                        <version>2.3</version>
                        <configuration>
                            <!-- 将压缩后的js,css打到war包中 -->
                            <warSourceIncludes>
                                **/*min.js,
                                **/*min.css,
                                assets/**,
                                META-INF/**,
                                **/*.xml,
                                **/*.jsp,
                                **/*.html,
                                **/*.shtml,
                                **/*.gif,
                                **/*.jpg,
                                **/*.png
                            </warSourceIncludes>
                            <webXml>src/main/webapp/WEB-INF/web.xml</webXml>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
